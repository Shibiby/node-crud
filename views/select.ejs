<!DOCTYPE html>
<html>
  <head>
    <title>NODEJS CRUD</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/bootstrap/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap/fontawesome/css/all.min.css">
  </head>
<body style="background-color: yellow; font-family: 'Times New Roman', Times, serif;">
<h1>BOOKS DATA</h1>


<div class="table-responsive">
<table class="table table-dark table-bordered">
    <tr>
        <td>ID</td>
        <td>NAME</td>
        <td>PRICE</td>
        <td>ACTION</td>
    </tr>
    <% books.forEach(function(item) { %>
    <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td>
            <a class="btn btn-success" id="btn" href="/edit?id=<%= item.id %>"><i class="fa fa-edit"></i></a>
            <a class="btn btn-success" id="btn" href="/delete?id=<%= item.id %>" onClick="return confirm('Delete record ?')"><i class="fa fa-trash"></i></a>

        </td>
    </tr>
    <% }); %>
</table>
</div>

<hr style="background-color: antiquewhite; width: 80px;">
            <a class="btn btn-dark" href="/">Back</a>

<script src="/bootstrap/jquery/dist/jquery.min.js"></script>
<script src="/bootstrap/popper.js/dist/popper.min.js"></script>
<script src="/bootstrap/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/bootstrap/fontawesome/js/all.min.js"></script>
</html>
